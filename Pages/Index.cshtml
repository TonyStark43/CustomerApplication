@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This is a customer service application</p>
</div>

<div class="text-center mt-4">
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-page="/Customer/Index" class="btn btn-primary btn-lg">Go to Customer Dashboard</a>
    }
    else
    {
        <a class="btn btn-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login to View Customer Dashboard</a>
    }
</div>
